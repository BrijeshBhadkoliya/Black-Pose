<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>POS | Login</title>
    <link rel="shortcut icon" href="images/blackPOSlogo.png">
    <!-- Bootstrap CSS -->
    <link href="assets/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="assets/css/style.css">

     <!-- toster jqury link -->
   <script src="assets/js/tostify/jquery-1.9.1.min.js"></script>
   <link rel="stylesheet" href="assets/css/toastr.min.css"/>
   <script src="assets/js/js-toastr.js"></script>
</head>
<body class="vertical-layout">
  <div id="containerbar" class="containerbar authenticate-bg">
        <!-- Start Container -->
        <div class="container">
            <div class="auth-box login-box">
                <!-- Start row -->
                <div class="row no-gutters align-items-center justify-content-center">
                    <!-- Start col -->
                    <div class="col-md-6 col-lg-5">
                        <!-- Start Auth Box -->
                        <div class="auth-box-right">
                            <div class="card">
                                <div class="card-body">
                                    <form  method="post" action="/login">
                                        <div class="form-head">
                                           <img src="images/blackPOSlogo.png" alt="logo" width="150px">
                                        </div>                                        
                                        <h4 class="text-primary my-4">Log in to your account !</h4>
                                        <div class="form-group">
                                            <input type="text" id="userName" class="form-control" value="admin" name="userName" placeholder="Enter Username" required/>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" id="password" class="form-control" value="1234" name="password" placeholder="Enter Password" required/>
                                        </div>
                                        <div class="form-row mb-3">
                                            <div class="col-sm-6">
                                                <div class="custom-control custom-checkbox text-left">
                                                  <input type="checkbox" class="custom-control-input" id="rememberme">
                                                  <label class="custom-control-label font-14" for="rememberme">Remember Me</label>
                                                </div>                                
                                            </div>
                                           
                                        </div>                          
                                      <button class="btn btn-primary btn-lg btn-block" type="submit" value="submit">Login</button>
                                    </form>
                                   
                                </div>
                            </div>
                        </div>
                        <!-- End Auth Box -->
                    </div>
                    <!-- End col -->
                </div>
                <!-- End row -->
            </div>
        </div>
        <!-- End Container -->
    </div>
    
    <% if(error.length > 0){ %>
      <script>
        toastr.warning('<%=error%>')
      </script>
    <% } %>

    



 
  
    


 <!--  Bootstrap Bundle with Popper -->
 <script src="assets/js/bootstrap.bundle.min.js" ></script>


</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- meta and links start -->
    <%- include('./onestep/meta & links')-%> 
    
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"> -->
    
    
    <!-- meta and links end -->
     
</head>
<body class="vertical-layout">
    <!-- Start Containerbar -->
    <div id="containerbar">
            <!-- Start Leftbar -->
            <%- include('./onestep/Leftbar')-%> 
            <!-- End Leftbar -->

            <!-- Start Rightbar -->
            <div class="rightbar">
                        <!-- Start Topbar -->
                        <%- include('./onestep/Topbar')-%>
                        <!-- End Topbar -->


                        <!-- Start Breadcrumbbar -->                    
                        <div class="breadcrumbbar">
                            <div class="row align-items-center">
                                <div class="col-md-12 col-lg-8">
                                    <h4 class="page-title">ACCOUNT</h4>
                                    <div class="breadcrumb-list">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                            <li class="breadcrumb-item"><a href="">Account</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">Transection List</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>          
                        </div>
                        <!-- End Breadcrumbbar -->


                        <!-- Start Contentbar -->    
                        <div class="contentbar">   
                            <!-- Start row -->            
                            <div class="row">
                                <!-- Start col -->
                                <div class="col-lg-12">
                                    <div class="card m-b-30">
                                        <div class="card-body m-b-0 ">
                                            <div class="row ">
                                                <div class="col-12">
                                                    <h5>TRANSECTION LIST</h5>
                                                </div>
                                            </div> 
                                        </div>
                                        
                                        <div class="card-body">  
                                            <form action="/account/transection-filter" method="post">
                                            <div class="row d-flex">
                                                
                                                    <div class="form-group  col-sm-6 col-md-3 col-lg-3">
                                                        <label for="AccTitel">Account</label>
                                                        <select name="AccTitel" id="AccTitel" required class="form-control border-secondary">
                                                            <option value="">Select Account</option>
                                                            <% accunt.forEach(function(data){ %>
                                                                <option value="<%=data.accTitel%>"><%=data.accTitel %></option>
                                                            <%}) %>
                                                        </select>
                                                        
                                                    </div>
                                                    <div class="form-group col-sm-6 col-md-3 col-lg-3">
                                                        <label for="Acctype">type</label>
                                                       <select name="Acctype" id="Acctype" required class="form-control border-secondary">
                                                            <option value="">Select type</option>
                                                            <option value="Income">income</option>
                                                            <option value="Expense">Expense</option>
                                                            <option value="Transfer">Transfer</option>
                                                           
                                                        </select>
                                                    </div>
                                                    <div class="form-group col-sm-6 col-md-3 col-lg-3">
                                                        <label for="StartDate">Start Date</label>
                                                        <input type="date" class="form-control border-secondary" id="StartDate" name="StartDate"  value="<%=serch.startDate%>">
                                                    </div>
                                                    <div class="form-group col-sm-6 col-md-3 col-lg-3">
                                                        <label for="enddate">End Date</label>
                                                        <input type="date" class="form-control border-secondary" id="enddate1" name="enddate" value="<%=serch.endDate%>" >
                                                    </div>
                                                    <div class="form-group col-12 justify-content-center">
                                                        <div class="row justify-content-around">
                                                            <button class="btn btn-rounded btn-primary-rgba col-2" type="submit" value="submit"> Filter</button>
                                                            <a href="/account/transection" class="btn btn-rounded btn-danger-rgba col-2">Reset</a>
                                                            <a href="/account/download-transection" class="btn btn-rounded btn-success-rgba col-2">Export</a>
                                                        </div>
                                                    </div>   
                                            </div>
                                        </form>


                                            <div class="table-responsive">
                                                <table id="DataTable" class="display table table-striped table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th style="display: none;">SortDate</th>
                                                            <th> Date</th>
                                                            <th> ACCOUNT</th>
                                                            <th> TYPE</th>
                                                            <th> AMOUNT</th>
                                                            <th> DESCRIPTION</th>
                                                            <th> DEBIT</th>
                                                            <th> CREDIT</th>
                                                            <th> BALANCE</th>
                                                          
                                                        </tr>
                                                    </thead>
                                                    <tbody class="justify-content-center">
                                                     
                                                        <% data.forEach((tra)=>{ %>
                                                            <tr>
                                                                <td style="display: none;"><%= new Date(tra.transaction.date).toISOString() %></td>
                                                                <td><%=tra.transaction.date.toLocaleDateString('fr-CA', { year: 'numeric', month: '2-digit', day: '2-digit' })%></td>
                                                                <td><%=tra.accTitel%></td>
                                                                <td><%=tra.transaction.type%></td>
                                                                <td><%=footer.Currency%> <%=tra.transaction.amount%></td>
                                                                <td><%=tra.transaction.description%></td>
                                                                <td><%=footer.Currency%> <%=tra.transaction.debit%></td>
                                                                <td><%=footer.Currency%> <%=tra.transaction.credit%></td>
                                                                <td><%=footer.Currency%> <%=tra.transaction.balance%></td> 
                                                        </tr>
                                                               
                                                        <% }) %>
                                                        
                                                    </tbody>
                                                    
                                                </table>
                                            </div>
                                            
                                        </div>
                                    </div>
                                </div>
                                <!-- End col -->
                            
                            <!-- End row --> 
                        </div>
                        <!-- End Contentbar -->
                       


                        <!-- Start Footerbar -->
                        <%- include('./onestep/footerbar')-%>
                        <!-- end Footerbar -->
            </div>
            <!-- Start Rightbar -->  
           
    </div>
    <!-- end Containerbar -->
   
    <!-- start Toastr -->
    <%- include('./onestep/toastr')-%>
    <!-- End Toastr -->
    
    <!-- start JS -->
   
    <%- include('./onestep/script')-%>
    <!-- end JS -->
    
   
  
</body>

</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- meta and links start -->
    <%- include('./onestep/meta & links')-%> 
    
    
    <!-- meta and links end -->
     
</head>
<body class="vertical-layout">
    <!-- Start Containerbar -->
    <div id="containerbar">
            <!-- Start Leftbar -->
            <%- include('./onestep/Leftbar')-%> 
            <!-- End Leftbar -->

            <!-- Start Rightbar -->
            <div class="rightbar">
                        <!-- Start Topbar -->
                        <%- include('./onestep/Topbar')-%>
                        <!-- End Topbar -->


                        <!-- Start Breadcrumbbar -->                    
                        <div class="breadcrumbbar">
                            <div class="row align-items-center">
                                <div class="col-md-12 col-lg-8">
                                    
                                    <div class="breadcrumb-list">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                            <li class="breadcrumb-item"><a href="/coustomer/list">costomer</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">Coustomer Detail</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>          
                        </div>
                        <!-- End Breadcrumbbar -->


                        <!-- Start Contentbar -->    
                        <div class="contentbar">  
                              
                            <!-- Start row -->            
                            <div class="row">
                                <!-- Start col -->
                                 <div class="col-lg-12">
                                    <div class="card m-b-30">
                                    <div class="card-header">
                                        <div class="card m-b-5 d-lg-inline">
                                            <h5>Customer Name: <%=data.cousName%></h5>
                                           <!--  <h6><i class="dripicons-calendar"></i> Joined at : 28-05-2020</h6> -->
                                        </div>
                                        <div class="nav">
                                            <ul class="nav nav-tabs page-header-tabs shadow-sm">
                                                <li class="nav-item">
                                                  <a class="nav-link " href="/coustomer/views/<%=data._id%>">OrderList</a>
                                                </li>
                                                <li class="nav-item">
                                                  <a class="nav-link active" href="/coustomer/viewtransection/<%=data._id%>">Transaction list</a>
                                                </li>
                                              </ul>
                                        </div>    
                                    </div>
                                </div>
                                </div>
                                <!-- End col -->
                            </div>
                            <!-- End row --> 

                            <!-- Start row -->
                            <div class="row">
                                 <!-- Start col -->
                                <div class="col-lg-8">
                                    <div class="card m-b-10 ">
                                        <div class="card-header">
                                            <h5>Transaction list</h5>
                                        </div>
                                    
                                        <div class="card-body">
                                            <div class="fixtable">
                                                <div class="table-responsive">
                                                    <table id="DataTable" class="display table table-bordered">
                                                        <thead>
                                                            <tr>
                                                                <th> Date</th>
                                                                <th> ACCOUNT</th>
                                                                <th> TYPE</th>
                                                                <th> AMOUNT</th>
                                                                <th> DESCRIPTION</th>
                                                                <th> DEBIT</th>
                                                                <th> CREDIT</th>
                                                                <th> BALANCE</th>
                                                            
                                                            </tr>
                                                        </thead>
                                                        <tbody class="justify-content-center">
                                                            <% list.forEach((tra)=>{ %>
                                                                <tr>
                                                                    <td><%=tra.transaction.date.toLocaleDateString('fr-CA', { year: 'numeric', month: '2-digit', day: '2-digit' })%></td>
                                                                    <td><%=tra.accTitel%></td>
                                                                    <td><%=tra.transaction.type%></td>
                                                                    <td><%=footer.Currency%> <%=tra.transaction.amount%></td>
                                                                    <td><%=tra.transaction.description%></td>
                                                                    <td><%=footer.Currency%> <%=tra.transaction.debit%></td>
                                                                    <td><%=footer.Currency%> <%=tra.transaction.credit%></td>
                                                                    <td><%=footer.Currency%> <%=tra.transaction.balance%></td> 
                                                            </tr>
                                                                
                                                            <% }) %>
                                                            
                                                            
                                                        </tbody>
                                                        
                                                    </table>
                                                </div> 
                                            </div>   
                                        </div>

                                    </div>
                                </div>
                                <div class="col-lg-4 ">
                                    <div class="card m-b-10 m-l-30">
                                        <div class="card-header">
                                            <h5>Customer</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="d-flex align-items-center m-b-30">
                                                <div class="m-l-5">
                                                    <img src="/uploads/resized/<%=data.cousImage%>" alt="img" class="rounded-circle" width="100px">
                                                </div>
                                                <div>
                                                    <span class="text-body align-content-center m-l-30"> <%=data.cousName%></span>
                                                </div>

                                            </div>
                                            <hr>
                                            <div class="d-flex align-items-center m-b-25">
                                                <div>
                                                    <i class="dripicons-basket p-2  rounded text-success-gradient"></i>
                                                </div>
                                                <div class="text-body align-content-center m-l-20">
                                                    <span > <%= order.length%> Orders</span>
                                                </div>

                                            </div>
                                            <div class="d-flex align-items-center m-b-25">
                                                <div>
                                                    <i class="dripicons-wallet p-1  rounded text-success-gradient"></i>
                                                </div>
                                                <div class="text-body align-content-center m-l-20">
                                                    <span > <%=data.Balance%> <%=footer.Currency%></span>
                                                </div>

                                            </div>
                                            <hr>
                                            <div>
                                                <h5>Contact Info</h5>
                                            </div>
                                            <ul class="list-unstyled ">
                                                <li class="m-b-5"><i class="dripicons-phone m-r-20 p-1  rounded text-success-gradient"></i>  <%=data.cousMobile%></li>
                                                <li class="m-b-5"><i class="dripicons-mail  m-r-20 p-1  rounded text-success-gradient"></i>  <%=data.cousEmail%></li>
                                            </ul>
                                            <hr>
                                            <div>
                                                <h5>Addresses</h5>
                                            </div>
                                            <ul class="list-unstyled ">
                                                <li lass="m-b-5"> Address: <%=data.cousAddres%></li>
                                                <li lass="m-b-5">   state: <%=data.cousState%></li>
                                                <li lass="m-b-5">Pin Code: <%=data.cousPINcode%></li>
                                                
                                            </ul>
                                        </div>

                                    </div>
                                    
                                </div>
   
                            </div>  
                        </div>
                        <!-- End Contentbar -->
                       


                        <!-- Start Footerbar -->
                        <%- include('./onestep/footerbar')-%>
                        <!-- end Footerbar -->
            </div>
            <!-- Start Rightbar -->  
           
    </div>
    <!-- end Containerbar -->
   
    <!-- start Toastr -->
    <%- include('./onestep/toastr')-%>
    <!-- End Toastr -->
    
    <!-- start JS -->
    <%- include('./onestep/script')-%>
    <!-- end JS -->
  
</body>
</html>


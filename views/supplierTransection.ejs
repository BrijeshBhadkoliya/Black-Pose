<!DOCTYPE html>
<html lang="en">
<head>
    <!-- meta and links start -->
    <%- include('./onestep/meta & links')-%> 
    <link href="/assets/plugins/animate/animate.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/assets/css/font-awesome-all.min.css">
    
    <!-- meta and links end -->
     
</head>
<body class="vertical-layout">
    <!-- Start Containerbar -->
    <div id="containerbar">
            <!-- Start Leftbar -->
            <%- include('./onestep/Leftbar')-%> 
            <!-- End Leftbar -->

            <!-- Start Rightbar -->
            <div class="rightbar">
                        <!-- Start Topbar -->
                        <%- include('./onestep/Topbar')-%>
                        <!-- End Topbar -->


                        <!-- Start Breadcrumbbar -->                    
                        <div class="breadcrumbbar">
                            <div class="row align-items-center">
                                <div class="col-md-12 col-lg-8">
                                    
                                    <div class="breadcrumb-list">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                            <li class="breadcrumb-item"><a href="/supplier/list">Supplier</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">Supplier Transaction</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>          
                        </div>
                        <!-- End Breadcrumbbar -->


                        <!-- Start Contentbar -->    
                        <div class="contentbar">  
                              
                            <!-- Start row -->            
                            <div class="row">
                                <!-- Start col -->
                                <div class="col-lg-12">
                                    <div class="card m-b-30">
                                    <div class="card-header">
                                        <div class="card m-b-5">
                                            <h3><%=data.suppName%></h3>
                                        </div>
                                        <div class="nav">
                                            <ul class="nav nav-tabs page-header-tabs shadow-sm">
                                                <li class="nav-item">
                                                  <a class="nav-link" href="/supplier/views/<%=data._id%>">Detail</a>
                                                </li>
                                                <li class="nav-item">
                                                  <a class="nav-link " href="/supplier/product/<%=data._id%>">Product List</a>
                                                </li>
                                                <li class="nav-item">
                                                  <a class="nav-link active" href="/supplier/transection/<%=data._id%>">Transaction</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" href="/supplier/OrderList/<%=data._id%>">Order List</a>
                                                  </li>
                                              </ul>
                                        </div>    
                                    </div>
                                </div>
                                </div>
                                <!-- End col -->
                            </div>
                            <!-- End row --> 

                            <!-- Start row -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="card m-b-30">
                                        <div class="card-header">
                                    <div class="row justify-content-center text-center">
                                        <div class="col-2">
                                            <h3><%=Orderamount%> $</h3>
                                            <p class="text-primary">Total Order Amount</p>
                                        </div>
                                        <div class="col-2">
                                            <h3><%=payAmount%> $</h3>
                                            <p class="text-primary">Total Paied Amount</p>
                                        </div>
                                        <div class="col-2">
                                            <h3><mark><%=Orderamount - payAmount %> $</mark></h3>
                                            <p class="text-primary">Total Due Amount</p>
                                        </div>
                                        <div class="col-2">
                                            <button class="btn btn-rounded btn-primary  col-4 expadd "  id="paysup" value="<%=data._id%>+$<%=Orderamount - payAmount %>"> Pay </button>
                                        </div>

                                    </div>
                                </div>
                                </div>
                                </div>  
                                 <!-- Start col -->
                                <div class="col-lg-12">
                                    <div class="card m-b-10 ">
                                        <div class="card-header">
                                            <h3>Transection List</h3>
                                        </div>
                                    
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <table id="default-datatable" class="display table  table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th> Date</th>
                                                            <th> ACCOUNT</th>
                                                            <th> TYPE</th>
                                                            <th> AMOUNT</th>
                                                            <th> DESCRIPTION</th>
                                                            <th> DEBIT</th>
                                                            <th> CREDIT</th>
                                                            <th> BALANCE</th>
                                                          
                                                        </tr>
                                                    </thead>
                                                    <tbody class="justify-content-center">
                                                        <% list.forEach((tra)=>{ %>
                                                            <tr>
                                                                <td><%=tra.transaction.date.toLocaleDateString('fr-CA', { year: 'numeric', month: '2-digit', day: '2-digit' })%></td>
                                                                <td><%=tra.accTitel%></td>
                                                                <td><%=tra.transaction.type%></td>
                                                                <td><%=tra.transaction.amount%></td>
                                                                <td><%=tra.transaction.description%></td>
                                                                <td><%=tra.transaction.debit%></td>
                                                                <td><%=tra.transaction.credit%></td>
                                                                <td><%=tra.transaction.balance%></td> 
                                                        </tr>
                                                               
                                                        <% }) %>
                                                        
                                                        
                                                    </tbody>
                                                    
                                                </table>
                                            </div> 
                                        </div>

                                    </div>
                                </div>
                                 
                                <!-- Modal -->
                                <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog " role="document">
                                        <div class="modal-content" id="modelsho">
                                            
                                        </div>
                                    </div>
                                </div>

                            </div>  
                            
                        </div>
                       
                        <!-- End Contentbar -->
 
                        <!-- Start Footerbar -->
                        <%- include('./onestep/footerbar')-%>
                        <!-- end Footerbar -->
            </div>
            <!-- Start Rightbar -->  
           
    </div>
    <!-- end Containerbar -->
   
    <!-- start Toastr -->
    <%- include('./onestep/toastr')-%>
    <!-- End Toastr -->
    
    <!-- start JS -->
    
    <%- include('./onestep/script')-%>
    <!-- end JS -->

</body>
</html>


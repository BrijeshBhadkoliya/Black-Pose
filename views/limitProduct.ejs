<!DOCTYPE html>
<html lang="en">
<head>
    <!-- meta and links start -->
    <%- include('./onestep/meta & links')-%> 
    <link href="/assets/plugins/animate/animate.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/assets/css/font-awesome-all.min.css">
    
    
    <!-- meta and links end -->
     
</head>
<body class="vertical-layout">
    <!-- Start Containerbar -->
    <div id="containerbar">
            <!-- Start Leftbar -->
            <%- include('./onestep/Leftbar')-%> 
            <!-- End Leftbar -->

            <!-- Start Rightbar -->
            <div class="rightbar">
                        <!-- Start Topbar -->
                        <%- include('./onestep/Topbar')-%>
                        <!-- End Topbar -->


                        <!-- Start Breadcrumbbar -->                    
                        <div class="breadcrumbbar">
                            <div class="row align-items-center">
                                <div class="col-md-12 col-lg-8">
                                    <h4 class="page-title">PRODUCT</h4>
                                    <div class="breadcrumb-list">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                            <li class="breadcrumb-item"><a href="">Product</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">Product List</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>          
                        </div>
                        <!-- End Breadcrumbbar -->


                        <!-- Start Contentbar -->    
                        <div class="contentbar">   
                            <!-- Start row -->            
                            <div class="row">
                                <!-- Start col -->
                                <div class="col-lg-12">
                                    <div class="card m-b-30">
                                        <div class="card-header">
                                            <div class="row justify-content-between">
                                                <div class="col-4">
                                                    <h4>Stock Limit Products List </h4>
                                                    <p>The products are shown in this list which quantity is below 50</p>
                                                </div>
                                                <div class="col-2 text-right">
                                                    <a href="/product/add"><button class="btn btn-primary">Add Product</button></a>
                                                </div>
                                            </div> 
                                        </div>
                                        
                                        <div class="card-body">  
                                            <div class="table-responsive">
                                                <table id="DataTable" class="display table table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>Sr No</th>
                                                            <th> Name</th>
                                                            <th> Image</th>
                                                            <th> SUPPLIER NAME</th>
                                                            <th> PRODUCT CODE</th>
                                                            <th> PURCHASE PRICE</th>
                                                            <th> SELLING PRICE</th>
                                                            <th> QUANTITY AT STORE</th>
                                                            
                                                               
                                                        </tr>
                                                    </thead>
                                                    <tbody class="justify-content-center">
                                                        <% var i = 1 %>
                                                        <% data.forEach((pro)=>{ %>
                                                            <tr>
                                                                <td><%=i%></td>
                                                                <td><%=pro.Name%></td>
                                                                <td><img src="../uploads/resized/<%=pro.productImage%>" class="rounded-circle" width="50px" height="50px" alt=""></td>
                                                                <td><%=pro.supplier%></td>
                                                                <td><%=pro.proCode%></td>
                                                                <td><%=footer.Currency%> <%=pro.purchasePrice%></td>
                                                                <td><%=footer.Currency%> <%=pro.sellingPrice%></td>
                                                                <td class="row "> 
                                                                    <div class="col-6 text-left">

                                                                    <form action="/product/quantity" class="d-flex" method="post">                            
                                                                            <input type="hidden" name="editqun" value="<%=pro._id%>">
                                                                            <input type="date" hidden  name="date" class="dateArr">
                                                                            <input type="number" class="form-control cart-qty" name="quantity" value="<%=pro.quantity%>">
                                                                            <button class="btn btn-round btn-primary-rgba" type="submit">
                                                                                <i class="feather icon-plus-circle"></i>
                                                                            </button>
                                                                    </form>
                                                            </div>

                                                                </td>   
                                                        </tr>
                                                                <% i++ %>
                                                        <% }) %>
                                                        
                                                    </tbody>
                                                    
                                                </table>
                                            </div>
                                            
                                        </div>
                                    </div>
                                </div>
                                <!-- End col -->
                             <!-- Start col -->
                   
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog " role="document">
                                <div class="modal-content" id="modelsho">
                                    
                                </div>
                            </div>
                        </div>
                          
                    <!-- End col -->
                            <!-- End row --> 
                        </div>
                        <!-- End Contentbar -->
                       


                        <!-- Start Footerbar -->
                        <%- include('./onestep/footerbar')-%>
                        <!-- end Footerbar -->
            </div>
            <!-- Start Rightbar -->  
           
    </div>
    <!-- end Containerbar -->
  <script>
  const  dateArr = document.getElementsByClassName('dateArr')
    for(let i = 0; i<dateArr.length; i++ ){
         dateArr[i].value = new Date().toISOString().split('T')[0];
         
    }
    console.log(dateArr);
    
</script>
    <!-- start Toastr -->
    <%- include('./onestep/toastr')-%>
    <!-- End Toastr -->
    
    <!-- start JS -->
    
    <%- include('./onestep/script')-%>
    <!-- end JS -->
    
    
</body>

</html>
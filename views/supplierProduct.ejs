<!DOCTYPE html>
<html lang="en">
<head>
    <!-- meta and links start -->
    <%- include('./onestep/meta & links')-%> 
    <link href="/assets/plugins/animate/animate.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/assets/css/font-awesome-all.min.css">
    
    <!-- meta and links end -->
     
</head>
<body class="vertical-layout">
    <!-- Start Containerbar -->
    <div id="containerbar">
            <!-- Start Leftbar -->
            <%- include('./onestep/Leftbar')-%> 
            <!-- End Leftbar -->

            <!-- Start Rightbar -->
            <div class="rightbar">
                        <!-- Start Topbar -->
                        <%- include('./onestep/Topbar')-%>
                        <!-- End Topbar -->


                        <!-- Start Breadcrumbbar -->                    
                        <div class="breadcrumbbar">
                            <div class="row align-items-center">
                                <div class="col-md-12 col-lg-8">
                                    
                                    <div class="breadcrumb-list">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                            <li class="breadcrumb-item"><a href="/supplier/list">Supplier</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">Supplier Detail</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>          
                        </div>
                        <!-- End Breadcrumbbar -->


                        <!-- Start Contentbar -->    
                        <div class="contentbar">  
                              
                            <!-- Start row -->            
                            <div class="row">
                                <!-- Start col -->
                                <div class="col-lg-12">
                                    <div class="card m-b-30">
                                    <div class="card-header">
                                        <div class="card m-b-5">
                                            <h3><%=data.suppName%></h3>
                                        </div>
                                        <div class="nav">
                                            <ul class="nav nav-tabs page-header-tabs shadow-sm">
                                                <li class="nav-item">
                                                  <a class="nav-link" href="/supplier/views/<%=data._id%>">Detail</a>
                                                </li>
                                                <li class="nav-item">
                                                  <a class="nav-link active" href="/supplier/product/<%=data._id%>">Product List</a>
                                                </li>
                                                <li class="nav-item">
                                                  <a class="nav-link" href="/supplier/transection/<%=data._id%>">Transaction</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" href="/supplier/OrderList/<%=data._id%>">Order List</a>
                                                  </li>
                                              </ul>
                                        </div>    
                                    </div>
                                    </div>
                                </div>
                                <!-- End col -->
                            </div>
                            <!-- End row --> 

                            <!-- Start row -->
                            <div class="row">
                                 <!-- Start col -->
                                <div class="col-lg-12">
                                    <div class="card m-b-10 ">
                                        <div class="card-header">
                                            <h3>Product List</h3>
                                        </div>
                                    
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <table id="default-datatable" class="display table table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>Sr No</th>
                                                            <th> Name</th>
                                                            <th> Image</th>
                                                            <th> SUPPLIER NAME</th>
                                                            <th> PRODUCT CODE</th>
                                                            <th> PURCHASE PRICE</th>
                                                            <th> SELLING PRICE</th>
                                                            <th> QUANTITY AT STORE</th>
                                                            <th> ORDERS</th>
                                                            <th>Action</th>     
                                                        </tr>
                                                    </thead>
                                                    <tbody class="justify-content-center">
                                                        <% var i = 1 %>
                                                        <% product.forEach((pro)=>{ %>
                                                            <tr class="text-center">
                                                                <% if (accessdata.data.symbol_placement == 1) { %>

                                                                    <td><%=i%></td>
                                                                    <td><%=pro.Name%></td>
                                                                    <td><img src="/uploads/resized/<%=pro.productImage%>" width="50px" height="50px" alt=""></td>
                                                                    <td><%=pro.supplier%></td>
                                                                    <td><%=pro.proCode%></td>
                                                                    <td><%=pro.purchasePrice%> <%=accessdata.data.Currency%></td>
                                                                    <td><%=pro.sellingPrice%> <%=accessdata.data.Currency%></td>
                                                                    <td><%=pro.quantity%> <button class="btn btn-round  btn-primary-rgba proupdate " id="addqun" value="<%=pro._id%>" ><i class="feather icon-plus-circle"></i></button></td>
                                                                    <td>0</td>
                                                                    
                                                                    <td>
                                                                        <a href="/product/update/<%=pro._id%>" class="btn btn-round btn-success proupdate "><i class="feather icon-edit"></i></a>
                                                                        <a href="/product/delet/<%=pro._id%>" class="btn btn-round btn-danger prodelet "><i class="feather icon-trash-2"></i></a>
                                                                    </td>
                                                                <% } else { %>

                                                                    <td><%=i%></td>
                                                                    <td><%=pro.Name%></td>
                                                                    <td><img src="/uploads/resized/<%=pro.productImage%>" width="50px" height="50px" alt=""></td>
                                                                    <td><%=pro.supplier%></td>
                                                                    <td><%=pro.proCode%></td>
                                                                    <td><%=accessdata.data.Currency%> <%=pro.purchasePrice%></td>
                                                                    <td><%=accessdata.data.Currency%> <%=pro.sellingPrice%></td>
                                                                    <td class="row "> 
                                                                        <!-- <div class="col-6 text-left"> -->
    
                                                                        <form action="/product/quantity" class="d-flex border-0" method="post">
                                                                        
                                                                                <input type="hidden" name="editqun" value="<%=pro._id%>">
                                                                                <input type="date" hidden  name="date" class="dateArr">
                                                                                <input type="number" class="form-control cart-qty" name="quantity" value="<%=pro.quantity%>">
                                                                                <button class="btn btn-round btn-primary-rgba" type="submit">
                                                                                    <i class="feather icon-plus-circle"></i>
                                                                                </button>
                                                                           
                                                                    </form>
                                                                </div>
    
                                                                    </td>   
                                                                    <td>0</td>
                                                                    
                                                                    <td>
                                                                        <a href="/product/update/<%=pro._id%>" class="btn btn-round btn-success proupdate "><i class="feather icon-edit"></i></a>
                                                                        <a href="/product/delet/<%=pro._id%>" class="btn btn-round btn-danger prodelet "><i class="feather icon-trash-2"></i></a>
                                                                    </td>
                                                                <% } %>
                                                        </tr>
                                                                <% i++ %>
                                                        <% }) %>
                                                        
                                                    </tbody>
                                                    
                                                </table>
                                            </div>
                                        </div>

                                    </div>
                                </div>
   
                            </div>  
                        </div>
                        <!-- End Contentbar -->
                         <!-- Modal -->
                         <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog " role="document">
                                <div class="modal-content" id="modelsho">
                                    
                                </div>
                            </div>
                        </div>
                       


                        <!-- Start Footerbar -->
                        <%- include('./onestep/footerbar')-%>
                        <!-- end Footerbar -->
            </div>
            <!-- Start Rightbar -->  
           
    </div>
    <!-- end Containerbar -->
   
    <!-- start Toastr -->
    <%- include('./onestep/toastr')-%>
    <!-- End Toastr -->
    <script>
        const  dateArr = document.getElementsByClassName('dateArr')
          for(let i = 0; i<dateArr.length; i++ ){
               dateArr[i].value = new Date().toISOString().split('T')[0];
               
          }
          console.log(dateArr);
          
      </script>
    <!-- start JS -->
    <%- include('./onestep/script')-%>
    <script src="/assets/js/custom/custom-model.js"></script>
    <script src="/assets/js/custom/custom-supplier-product.js"></script>
    <!-- end JS -->

  
</body>
</html>


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- meta and links start -->
    <%- include('./onestep/meta & links')-%> 
    
    
    <!-- meta and links end -->
     
</head>
<body class="vertical-layout">
    <!-- Start Containerbar -->
    <div id="containerbar">
            <!-- Start Leftbar -->
            <%- include('./onestep/Leftbar')-%> 
            <!-- End Leftbar -->

            <!-- Start Rightbar -->
            <div class="rightbar">
                        <!-- Start Topbar -->
                        <%- include('./onestep/Topbar')-%>
                        <!-- End Topbar -->


                        <!-- Start Breadcrumbbar -->                    
                        <div class="breadcrumbbar">
                            <div class="row align-items-center">
                                <div class="col-md-12 col-lg-8">
                                    <h5 class="page-title">SUPPLIER</h5>
                                    <div class="breadcrumb-list">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                            <li class="breadcrumb-item"><a href="">Supplier</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">Supplier List</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>          
                        </div>
                        <!-- End Breadcrumbbar -->


                        <!-- Start Contentbar -->    
                        <div class="contentbar">  
                              
                            <!-- Start row -->            
                            <div class="row">
                                <!-- Start col -->
                                <div class="col-lg-12">
                                    <div class="card m-b-30">
                                        <div class="card-header">
                                            <div class="row justify-content-between">
                                                <div class="col-2">
                                                    <h5>SUPPLIER LIST</h5>
                                                </div>
                                                <div class="col-2 text-right">
                                                    <a href="/supplier/add"><button class="btn btn-primary">Add Supplier</button></a>
                                                </div>
                                            </div>
                                            
                                        </div>
                                        <div class="card-body">  
                                            <div class="table-responsive">
                                                <table id="AccDataTable" class="display table  table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>Sr No</th>
                                                            <th>Imges</th>
                                                            <th>Name</th>
                                                            <th>Email</th>
                                                            <th>Number</th>
                                                            <th>Product </th>
                                                            <th>Action</th>     
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% var i = 1 %>
                                                        <% data.forEach((sup)=>{ %>
                                                            <tr>
                                                                <td><%=i%></td>
                                                                <td><img src="/uploads/resized/<%= sup.suppImage%>" width="80px" height="80px"  alt=""></td>

                                                                <td><%=sup.suppName%></td>
                                                                <td><%=sup.suppEmail%></td>
                                                                <td><%=sup.suppMobile%></td>
                                                                <td><%=sup.productList.length%></td>
                                                                <td>
                                                                    <a href="/supplier/views/<%=sup._id%>" class="btn btn-round btn-primary supviews "><i class="dripicons-user-id"></i></a>
                                                                    <a href="/supplier/updateSupli/<%=sup._id%>" class="btn btn-round btn-success supupdate"><i class="feather icon-edit"></i></a>
                                                                    <a href="/supplier/delsupp/<%=sup._id%>" class="btn btn-round btn-danger supdelet"><i class="feather icon-trash-2"></i></a>
                                                                </td>
                                                            </tr>
                                                                <% i++ %>
                                                        <% }) %>
                                                        

                                                    </tbody>
                                                    
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End col -->
                            </div>
                            <!-- End row --> 
                        </div>
                        <!-- End Contentbar -->
                       


                        <!-- Start Footerbar -->
                        <%- include('./onestep/footerbar')-%>
                        <!-- end Footerbar -->
            </div>
            <!-- Start Rightbar -->  
           
    </div>
    <!-- end Containerbar -->
   
    <!-- start Toastr -->
    <%- include('./onestep/toastr')-%>
    <!-- End Toastr -->
    
    <!-- start JS -->
    <%- include('./onestep/script')-%>
    <!-- end JS -->
  
</body>
</html>